{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post }} 
      <a href="/dashboard/edit/{{post.id}}" class="edit-text">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<a href="/dashboard/new-post"><button>+ New Post</button></a>

<script src="/javascript/add-post.js"></script>